<div class="row">
  <div class="large-12 columns">
    <header class="header">
      <h2><%= @category.name %></h2>
      <div class="weather-icon-shadow">
        <span class="icon-sun"></span>
      </div>
      <div class="weather-icon">
        <span class="icon-sun"> <%= link_to image_tag('admin/b_category.gif') + t('shopror.views.category.edit'), edit_admin_category_path(@category) %></span>
      </div>
    </header>
  </div>
  <div class="large-12 columns">
    <div class="box">
      <div class="box-header bg-transparent">
        <div class="pull-right box-tools">
          <span class="box-btn" data-widget="collapse"><i class="icon-minus"></i></span>
          <span class="box-btn" data-widget="remove"><i class="icon-cross"></i></span>
        </div>
        <h3 class="box-title"><i class="fontello-th-list"></i>
          <span><%= t('shopror.views.category.sub_categories') %></span>
        </h3>
      </div>
      <div class="box-body">
        <div class="zurb-list">
          <ul>
            <% @category.children.each_with_index do |category, index| %>
                <li>
                  <img alt="" class="img-circle star" src="http://api.randomuser.me/portraits/thumb/men/22.jpg">
                  <b><%= link_to category.name, admin_category_path(category) %></b><i class="icon-attachment"></i><i class="text-orange fontello-record"></i>
                  <small><%= link_to image_tag('admin/b_category.gif') + t('shopror.views.category.edit'), edit_admin_category_path(category) %></small>
                  <h5></h5>
                  <p></p>
                </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="box">
      <div class="box-header bg-transparent">
        <div class="pull-right box-tools">
          <span class="box-btn" data-widget="collapse"><i class="icon-minus"></i></span>
          <span class="box-btn" data-widget="remove"><i class="icon-cross"></i></span>
        </div>
        <h3 class="box-title"><i class="fontello-th-list"></i>
          <span><%= t("shopror.views.product.products") %></span>
        </h3>
      </div>
      <div class="box-body">
        <div class="zurb-list">
          <hr>
          <ul>
            <% @category.products.each do |product| %>
                <li>
                  <img alt="" class="img-circle star" src="http://api.randomuser.me/portraits/thumb/men/22.jpg">
                  <b><%= product.name %></b><i class="icon-attachment"></i><i class="text-orange fontello-record"></i>
                  <small><%= link_to image_tag('admin/b_reviews.gif'), "#" %>
                  <%= link_to image_tag('admin/b_related.gif'), "#" %>
                  <%= link_to image_tag('admin/b_product.gif', title:t('shopror.views.product.edit')), edit_admin_product_path(product) %>
                  </small>
                  <h5></h5>
                  <p><%= render :partial => "/admin/variants/list", :locals => {:product => product}  %></p>
                </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>



<div class="row">
  <div class="small-9 medium-5 small-centered columns">

    <table class="displaytable" id="prodtypeback">
  <tr>
    <td><h1><%= @category.name %></h1></td>
  </tr>

  <tr>
    <td class="pagetoplinks">
      <%= link_to image_tag('admin/b_category.gif') + t('shopror.views.category.add'),  new_admin_category_path %>
      <%= link_to image_tag('admin/b_product.gif') + t('shopror.views.product.add'), new_admin_category_product_path(@category) %>
      <%= link_to image_tag('admin/b_category.gif') + t('shopror.views.category.edit'), edit_admin_category_path(@category) %>
    </td>
  </tr>

  <tr>
    <td><h2><%= t('shopror.views.category.sub_categories') %></h2></td>
  </tr>

  <% if @category.leaf? %>
      <tr>
        <td><%= t("shopror.views.category.no_sub_categories") %></td>
      </tr>
  <% else %>
      <tr>
        <td>
          <table class="formatted">
            <% @category.children.each_with_index do |category, index| %>
                <tr bgcolor="<%= index % 2 == 0 ? '#eeeeee' : '#dddddd' %>">
                  <td width="400"><%= category.name %></td>
                  <td align="right">
                    <%= link_to image_tag('admin/b_category.gif', title:t('shopror.views.category.sub_categories')), admin_category_path(category) %>
                  </td>
                </tr>
            <% end %>
          </table>
        </td>
      </tr>
  <% end %>


  <tr>
    <td><h2><%= t("shopror.views.product.products") %></h2></td>
  </tr>
  <% if @category.products.empty? %>
      <tr>
        <td>
          <%= t("shopror.views.product.no_products") %></td>
      </tr>
  <% else %>
      <% @category.products.each do |product| %>
          <tr>
            <td>
              <table class="displaytable">
                <tr>
                  <td width="300" class="subheader"><%= product.name %></td>
                  <td align="right">
                    <%= link_to image_tag('admin/b_attributes.gif'), "#" %>
                    <%= link_to image_tag('admin/b_reviews.gif'), "#" %>
                    <%= link_to image_tag('admin/b_related.gif'), "#" %>
                    <%= link_to image_tag('admin/b_product.gif', title:t('shopror.views.product.edit')), edit_admin_product_path(product) %>
                  </td>
                </tr>
              </table>
              <%= render :partial => "/admin/variants/list", :locals => {:product => product}  %>
            </td>
          </tr>
      <% end %>
  <% end %>
</table>
</div>
    </div>